SIMULATION
  SIMULATION_TYPE INVERSE

  INVERSION ERT
    #QUANTITY_OF_INTEREST ELECTRICAL_CONDUCTIVITY
    MIN_ELECTRICAL_CONDUCTIVITY 0.01d0
    MAX_ELECTRICAL_CONDUCTIVITY 1.5d0
    MIN_CGLS_ITERATION 30
    MAX_CGLS_ITERATION 50
    BETA 100.d0  
    BETA_REDUCTION_FACTOR 0.5d0
    TARGET_CHI2 1.d0
    MIN_COST_REDUCTION 0.2d0
    MAX_INVERSION_ITERATION 4
    STARTING_MODEL INPUT_ELECTRICAL_CONDUCTIVITY

    CONSTRAINED_BLOCKS
      soil1
        BLOCK_LINKS 0 
        STRUCTURE_METRIC 2
        WEIGHING_FUNCTION 1
        WEIGHING_FUNCTION_MEAN 10.d0
        WEIGHING_FUNCTION_STD_DEVIATION 0.001d0
        ANISOTROPIC_WEIGHTS 1.d0 1.0d0 1.0d0
        RELATIVE_WEIGHT 1.0d0
        REFERENCE_CONDUCTIVITY 0.002d0
      /      
    /

    FORWARD_SIMULATION_FILENAME ./ert_forward.in

  END
    
END

