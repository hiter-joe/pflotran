# Description: Smectite-to-illite material transform model

#=============================== GENERAL Mode =================================
SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE GENERAL
      OPTIONS
        CHECK_MAX_DPL_LIQ_STATE_ONLY
        GAS_STATE_AIR_MASS_DOF WATER_MOL_FRAC
      /
    /
    SUBSURFACE_TRANSPORT transport
      MODE GIRT
    /
    UFD_DECAY ufd_decay
    /
    WASTE_FORM wf_general
      TYPE GENERAL
    /
  /
  CHECKPOINT
    # TIMES y 1.0d-1 1.0d+0
    FORMAT HDF5
  /
  # RESTART
  #   FILENAME smectite_to_illite-restart.h5
  # /
  # INPUT_RECORD_FILE
END

SUBSURFACE

#============================ numerical methods ===============================
NUMERICAL_METHODS FLOW

  TIMESTEPPER
    #  MAX_STEPS -1
    TS_ACCELERATION 10
    # SATURATION_CHANGE_GOVERNOR 1.0d+0
    # CONCENTRATION_CHANGE_GOVERNOR 0.5d+0
  /

  NEWTON_SOLVER
    MAXIMUM_NUMBER_OF_ITERATIONS 150
    RTOL 1.0d-8
    ATOL 1.0d-8
    STOL 1.0d-30
  /

  LINEAR_SOLVER
    # SOLVER DIRECT
    # SOLVER ITERATIVE
  /

END

#================================ chemistry ===================================
CHEMISTRY
  PRIMARY_SPECIES
    Cs137
    Sr90
  /
  MINERALS
    Cs137(s)
    Sr90(s)
  /
  MINERAL_KINETICS
    Cs137(s)
      RATE_CONSTANT 0.0d+0
    /
    Sr90(s)
      RATE_CONSTANT 0.0d+0
    /
  /

  DATABASE ./ufd-decay-smectite-to-illite.dat

  TRUNCATE_CONCENTRATION 1.0d-20

  OUTPUT
    TOTAL
    all
  /

END

#================================ regression ==================================
REGRESSION
  CELL_IDS
    2
    3
    8
  /
END

#============================== debug settings ================================

#============================== discretization ================================
GRID
  TYPE STRUCTURED
  ORIGIN 0.0d+0 0.0d+0 0.0d+0
  NXYZ 1 1 8
  BOUNDS
    0.0d+0 0.0d+0 0.0d+0
    1.0d+0 1.0d+0 8.0d+0
  /
END

#============================ fluid properties ================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.0d-9
/

#=========================== material properties ==============================
MATERIAL_PROPERTY soil
  ID 1
  CHARACTERISTIC_CURVES cc_default
  POROSITY 3.5d-1
  TORTUOSITY 5.0d-1
  ROCK_DENSITY 2.650d+3 kg/m^3
  THERMAL_CHARACTERISTIC_CURVES cct_soil
  HEAT_CAPACITY 8.30d+2 J/kg-C
  PERMEABILITY
    PERM_X 1.0d-12
    PERM_Y 1.0d-12
    PERM_Z 1.0d-12
  /
END

MATERIAL_PROPERTY wp
  ID 2
  CHARACTERISTIC_CURVES cc_default
  POROSITY 5.0d-1
  TORTUOSITY 1.0d+0
  ROCK_DENSITY 2.650d+3 kg/m^3
  THERMAL_CHARACTERISTIC_CURVES cct_wp
  HEAT_CAPACITY 8.30d+2 J/kg-C
  PERMEABILITY
    PERM_X 1.0d-12
    PERM_Y 1.0d-12
    PERM_Z 1.0d-12
  /
END

MATERIAL_PROPERTY buffer1
  ID 3
  CHARACTERISTIC_CURVES cc_bentonite
  POROSITY 3.5d-1
  TORTUOSITY_FUNCTION_OF_POROSITY 1.4d+0
  ROCK_DENSITY 2.700d+3
  THERMAL_CHARACTERISTIC_CURVES cct_buffer
  HEAT_CAPACITY 8.30d+2
  ILLITIZATION def_3
  PERMEABILITY
    PERM_ISO  1.0d-17
  /
/

MATERIAL_PROPERTY buffer2
  ID 4
  CHARACTERISTIC_CURVES cc_bentonite
  POROSITY 3.5d-1
  TORTUOSITY_FUNCTION_OF_POROSITY 1.4d+0
  ROCK_DENSITY 2.700d+3
  THERMAL_CHARACTERISTIC_CURVES cct_buffer
  HEAT_CAPACITY 8.30d+2
  ILLITIZATION def_1
  PERMEABILITY
    PERM_ISO  1.0d-16
  /
/

#========================== illitization functions ============================
ILLITIZATION def_1
  ILLITIZATION_FUNCTION DEFAULT
    THRESHOLD_TEMPERATURE 2.00000d+1 C
    EA                    1.17152d+5 J/mol
    FREQ                  8.08000d+4 L/mol-s
    K_CONC                2.16000d-3 M
    SMECTITE_INITIAL      9.50000d-1
    SHIFT_PERM            1.50000d+3
    SHIFT_KD
      Cs  DEFAULT  -0.50000d+0
      Sr  DEFAULT  -0.50000d+0
    /
  END
END

ILLITIZATION def_2
  ILLITIZATION_FUNCTION DEFAULT
    THRESHOLD_TEMPERATURE 2.75000d+1 C
    EA                    1.20000d+5 J/mol
    FREQ                  8.10000d+4 L/mol-s
    K_CONC                2.20000d-3 M
    SMECTITE_INITIAL      9.75000d-1
    SHIFT_PERM            1.00000d+3
  END
END

ILLITIZATION def_3
  ILLITIZATION_FUNCTION GENERAL
    THRESHOLD_TEMPERATURE 2.50000d+1 C
    EA                    7.00000d+3 cal/mol
    FREQ                  8.44907d-6
    K_CONC                2.16000d-3 M
    K_EXP                 2.50000d-1
    SMECTITE_INITIAL      9.95000d-1
    SMECTITE_EXP          5.00000d+0
    SHIFT_PERM            9.72000d+2
    SHIFT_KD
      Cs  DEFAULT  0.10000d+0
      Sr  DEFAULT  0.10000d+0
    /
  END
END

#======================= thermal characteristic curves ========================
THERMAL_CHARACTERISTIC_CURVES cct_buffer
  THERMAL_CONDUCTIVITY_FUNCTION DEFAULT
    THERMAL_CONDUCTIVITY_DRY   0.600d+0 W/m-C
    THERMAL_CONDUCTIVITY_WET   1.500d+0 W/m-C
  END
END

THERMAL_CHARACTERISTIC_CURVES cct_soil
  THERMAL_CONDUCTIVITY_FUNCTION DEFAULT
    THERMAL_CONDUCTIVITY_DRY 5.500d+0 W/m-C
    THERMAL_CONDUCTIVITY_WET 7.000d+0 W/m-C
  END
END

THERMAL_CHARACTERISTIC_CURVES cct_wp
  THERMAL_CONDUCTIVITY_FUNCTION CONSTANT
    CONSTANT_THERMAL_CONDUCTIVITY 1.670d+1 W/m-C
  END
END

#========================== saturation functions ==============================
CHARACTERISTIC_CURVES cc_default
  SATURATION_FUNCTION VAN_GENUCHTEN
    LIQUID_RESIDUAL_SATURATION 0.0d+0
    ALPHA 1.0d-4
    M 5.0d-1
    MAX_CAPILLARY_PRESSURE 1.0d+6
  /
  PERMEABILITY_FUNCTION MUALEM
    PHASE LIQUID
    LIQUID_RESIDUAL_SATURATION 0.0d+0
    M 5.0d-1
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    PHASE GAS
    LIQUID_RESIDUAL_SATURATION 0.0d+0
    GAS_RESIDUAL_SATURATION 1.0d-40
    M 5.0d-1
  /
/

CHARACTERISTIC_CURVES cc_bentonite
  SATURATION_FUNCTION VAN_GENUCHTEN
    ALPHA 6.25d-8
    M 3.75d-1
    LIQUID_RESIDUAL_SATURATION 1.0d-1
    MAX_CAPILLARY_PRESSURE 1.0d+8
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    PHASE LIQUID
    M 3.75d-1
    LIQUID_RESIDUAL_SATURATION 1.0d-1
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    PHASE GAS
    M 3.75d-1
    LIQUID_RESIDUAL_SATURATION 1.0d-1
    GAS_RESIDUAL_SATURATION 0.1d+0
  /
END

#============================== output options ================================
OUTPUT
  SNAPSHOT_FILE
    FORMAT HDF5
      PERIODIC TIME      0.01 y between      0.01 y and       0.1  y
      PERIODIC TIME      0.1  y between      0.10 y and       1.0  y
    VARIABLES
      TEMPERATURE
      LIQUID_PRESSURE
      PERMEABILITY
      SMECTITE
    /
  /
/

#================================== times =====================================
TIME
  FINAL_TIME 1.0d+0 y
  INITIAL_TIMESTEP_SIZE 1.0d-4 d
  MAXIMUM_TIMESTEP_SIZE 1.0d+0 y
/

#================================== regions ===================================
REGION all
  COORDINATES
    0.0d+0 0.0d+0 0.0d+0
    1.0d+0 1.0d+0 8.0d+0
  /
END

REGION buffer1
  COORDINATES
    0.0d+0 0.0d+0 1.0d+0
    1.0d+0 1.0d+0 2.0d+0
  /
END

REGION buffer2
  COORDINATES
    0.0d+0 0.0d+0 2.0d+0
    1.0d+0 1.0d+0 3.0d+0
  /
END

REGION wp
  COORDINATES
    0.0d+0 0.0d+0 3.0d+0
    1.0d+0 1.0d+0 4.0d+0
  /
END

REGION west
  FACE WEST
  COORDINATES
    0.0d+0 0.0d+0 0.0d+0
    0.0d+0 1.0d+0 8.0d+0
  /
END

REGION east
  FACE EAST
  COORDINATES
    1.0d+0 0.0d+0 0.0d+0
    1.0d+0 1.0d+0 8.0d+0
  /
END

REGION north
  COORDINATES
    0.0d+0 0.0d+0 0.0d+0
    1.0d+0 1.0d+0 0.0d+0
  /
  FACE NORTH
END

REGION south
  COORDINATES
    0.0d+0 0.0d+0 8.0d+0
    1.0d+0 1.0d+0 8.0d+0
  /
  FACE SOUTH
END

REGION north_side
  COORDINATE 0.5d+0 0.5d+0 0.5d+0
END

REGION south_side
  COORDINATE 0.5d+0 0.5d+0 7.5d+0
END

#=========================== observation points ===============================
skip
OBSERVATION
  REGION north_side
  VELOCITY
/

OBSERVATION
  REGION south_side
  VELOCITY
/
noskip

#============================= flow conditions ================================
FLOW_CONDITION initial
  TYPE
    LIQUID_PRESSURE DIRICHLET
    MOLE_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  LIQUID_PRESSURE 1.0d+6
  MOLE_FRACTION 1.0d-6
  TEMPERATURE 20.0d+0
END

FLOW_CONDITION north
  TYPE
    LIQUID_PRESSURE DIRICHLET
    MOLE_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  LIQUID_PRESSURE 5.0d+6
  MOLE_FRACTION 1.0d-10
  TEMPERATURE 260.0d+0
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.0d+0 initial
  /
END

#========================== transport constraints =============================
CONSTRAINT initial
  CONCENTRATIONS
    Cs137     1.0d-20 T
    Sr90      1.0d-20 T
  /
  MINERALS
    Cs137(s)  0.0d+0  1.0d+0
    Sr90(s)   0.0d+0  1.0d+0
  /
END

#====================== initial and boundary conditions =======================
INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION all
END

INITIAL_CONDITION
  FLOW_CONDITION north
  TRANSPORT_CONDITION initial
  REGION north
/

BOUNDARY_CONDITION north
  FLOW_CONDITION north
  TRANSPORT_CONDITION initial
  REGION north
/

#========================== stratigraphy couplers =============================
STRATA
  MATERIAL soil
  REGION all
/

STRATA
  MATERIAL wp
  REGION wp
/

STRATA
  MATERIAL buffer1
  REGION buffer1
/

STRATA
  MATERIAL buffer2
  REGION buffer2
/

END_SUBSURFACE

#=============================== waste forms ==================================
WASTE_FORM_GENERAL

  WASTE_FORM
    REGION wp
    EXPOSURE_FACTOR 1.0d+0
    VOLUME 1.0d+0 m^3
    CANISTER_BREACH_TIME 0.0d+0 y
    MECHANISM_NAME csnf
  /

  PRINT_MASS_BALANCE

  MECHANISM CUSTOM
    NAME csnf
    FRACTIONAL_DISSOLUTION_RATE 1.0d-6 1/y
    MATRIX_DENSITY 10920.0d+0
    SPECIES
    # iso  | g/mol   | 1/s     | g/g waste | instant release fraction | daughter
      Cs137  1.3691d+2 7.31d-10  1.5d-7      0.0d+0
      Sr90   8.9910d+1 7.61d-10  7.0d-8      0.0d+0
    /
    CANISTER_DEGRADATION_MODEL
      CANISTER_MATERIAL_CONSTANT 1500.
    /
  END #MECHANISM CUSTOM

END_WASTE_FORM_GENERAL

#================================== decay =====================================
UFD_DECAY

  ELEMENT Sr
    SOLUBILITY 1.0d-11
    KD
      wp      1.0d+0 #kg water/m^3 bulk
      soil    2.0d+3 #kg water/m^3 bulk
      buffer1 1.0d+2 #kg water/m^3 bulk
      buffer2 1.0d+2 #kg water/m^3 bulk
    /
  /
  ISOTOPE Sr90
    ELEMENT Sr
    DECAY_RATE 7.61d-10
  /

  ELEMENT Cs
    SOLUBILITY 1.0d-11
    KD
      wp      1.0d+0 #kg water/m^3 bulk
      soil    2.0d+1 #kg water/m^3 bulk
      buffer1 1.0d+1 #kg water/m^3 bulk
      buffer2 1.0d+1 #kg water/m^3 bulk
    /
  /
  ISOTOPE Cs137
    ELEMENT Cs
    DECAY_RATE 7.31d-10
  /

END #UFD
