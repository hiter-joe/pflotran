#  Very small version of SPE1 lack oil test run

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW Flow
      MODE BLACK_OIL
      OPTIONS
       ISOTHERMAL
      /
    / ! end of subsurface_flow
  / ! end of process models
END  !! end simulation block

SUBSURFACE

#=========================== numerical methods ================================
NUMERICAL_METHODS FLOW

  TIMESTEPPER
    TS_ACCELERATION 100
  /

  NEWTON_SOLVER
    STOL 1.0D-18
    RTOL 1.0D-8
    ITOL 1.0D-8
    MAXIMUM_NUMBER_OF_ITERATIONS 20
    ANALYTICAL_JACOBIAN
  /

END

#=========================== discretization ===================================

GRID
  TYPE grdecl mspe1.grdecl
END

#=========================set up standard conditions ==========================

!REFERENCE_PRESSURE    1.0D5 Pa
!REFERENCE_TEMPERATURE 15.0 !C

#=========================== solver options ===================================




#=========================== times ============================================
TIME
  FINAL_TIME 250 d
  INITIAL_TIMESTEP_SIZE 10 d
  MINIMUM_TIMESTEP_SIZE 1.0D-10 d
  MAXIMUM_TIMESTEP_SIZE 30 d at 0. d
END

#=========================== material properties ==============================

MATERIAL_PROPERTY formation
  ID 1
  TORTUOSITY 1.d0
  ROCK_DENSITY 2.350d3
  SPECIFIC_HEAT 1.0d3
  THERMAL_CONDUCTIVITY_DRY 1.541d0
  THERMAL_CONDUCTIVITY_WET 1.541d0
  SOIL_COMPRESSIBILITY_FUNCTION QUADRATIC
  SOIL_COMPRESSIBILITY    4.35d-10 ! 1/Pa
  SOIL_REFERENCE_PRESSURE 1.0D5
  CHARACTERISTIC_CURVES ch1
/

#=========================== saturation functions =============================

CHARACTERISTIC_CURVES ch1

!tables to match EX1 solution
