  END !end PVDG
END

#=========================== regions ==========================================
REGION all
COORDINATES
-1.d20 -1.d20 -1.d20
 1.d20  1.d20  1.d20
/
/

#=========================== wells ==================================

WELL_DATA injg
  RADIUS 0.0762 m
  SKIN_FACTOR 0.00001
  WELL_TYPE GAS_INJECTOR
  BHPL     1000    Bar
  TARG_GSV 2831684 m^3/day
  CIJK 1 1 2 3   
END

WELL_DATA prod
  RADIUS 0.0762 m
  WELL_TYPE PRODUCER
  BHPL      68.9476 Bar
  TARG_OSV  3179.7 m^3/day
  CIJK 3 3 1 2 
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial_press
  TYPE
    OIL_PRESSURE dirichlet
    OIL_SATURATION dirichlet
    BUBBLE_POINT dirichlet
    TEMPERATURE dirichlet
  /
  OIL_PRESSURE 33.094D6 Pa !331 bars
  OIL_SATURATION 0.88d0
  BUBBLE_POINT 27.6804D6 Pa !276 bars
  TEMPERATURE 15.0d0 C  !up to here it refers to primary vars
  !DATUM 0.d0 0.d0 -2540.508
/

#=========================== condition couplers ==============================

INITIAL_CONDITION initial
FLOW_CONDITION initial_press
REGION all
/

#=========================== regression values ==============================

REGRESSION

  CELL_IDS

    1

    27
  
  /

END


#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL formation
END

END_SUBSURFACE
