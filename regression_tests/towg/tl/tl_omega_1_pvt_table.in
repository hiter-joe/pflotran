#  OpenGoSim 4-Oct-2017
#  Todd-Longstaff - 1D case - omega=1
SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW Flow
      MODE TODD_LONGSTAFF
      OPTIONS
       ISOTHERMAL
       TL_OMEGA 1.0
      /
    / ! end of subsurface_flow
  / ! end of process models
  !CHECKPOINT
  !/
END  !! end simulation block

SUBSURFACE

#=========================== numerical methods ================================
NUMERICAL_METHODS FLOW

  NEWTON_SOLVER
    ATOL 1D-8
    RTOL 1D-8
    STOL 1D-30
    DTOL 1D15
    ITOL 1D-7
    MAXIMUM_NUMBER_OF_ITERATIONS 8
    MAXIMUM_PRESSURE_CHANGE 5.D4
  /

END
#=========================== regression =======================================
REGRESSION
  CELL_IDS
    1
    2
    3
    10
  /
END
#=========================== discretization ===================================

! PV~10E5 m3
GRID
  TYPE STRUCTURED
  ORIGIN 0.d0 0.d0 -1000.d0
  NXYZ 10 1 1
  DXYZ
    100.0
    100.0
    10.0
  END
END

#=========================== solver options ===================================

#=========================== times ============================================
TIME
  FINAL_TIME 2000 d
  INITIAL_TIMESTEP_SIZE 1.0d-5 d
  MINIMUM_TIMESTEP_SIZE 1.0D-10 d
  MAXIMUM_TIMESTEP_SIZE 10.0 d
  !MAXIMUM_TIMESTEP_SIZE 1 d at 0. d
END

#=========================== output options ===================================
skip
OUTPUT
  FORMAT HDF5
  TIMES d 0.0 0.1 0.9 1.0 5.0 20.0 27.0 100.0 200 500 1000
  MASS_BALANCE_FILE
    PERIODIC TIMESTEP 1
  END
  OBSERVATION_FILE
    PERIODIC TIMESTEP 1
    VARIABLES
      LIQUID_SATURATION
      LIQUID_DENSITY
      LIQUID_MOBILITY
      LIQUID_VISCOSITY
      OIL_PRESSURE
      OIL_SATURATION
      OIL_DENSITY
      OIL_MOBILITY
      OIL_VISCOSITY
      TEMPERATURE
      POROSITY
      PERMEABILITY_X
    /
  END
END
noskip
#=========================== material properties ==============================

MATERIAL_PROPERTY formation
  ID 1
  POROSITY 0.1d0
  TORTUOSITY 1.d0
  ROCK_DENSITY 2.350d3
  SPECIFIC_HEAT 1.0d3
  THERMAL_CONDUCTIVITY_DRY 1.541d0
  THERMAL_CONDUCTIVITY_WET 1.541d0
  SOIL_COMPRESSIBILITY_FUNCTION QUADRATIC
  SOIL_COMPRESSIBILITY 1.0d-10 ! 1/Pa
  SOIL_REFERENCE_PRESSURE 1.0D5
  CHARACTERISTIC_CURVES ch1
  PERMEABILITY
    PERM_X 0.9869D-12 !1000 mD
    PERM_Y 0.9869D-12 !1000 mD
    PERM_Z 0.9869D-12 !1000 mD
  /
/

#=========================== datasets ==============================
#=========================== saturation functions =============================
CHARACTERISTIC_CURVES ch1
  CAP_PRESSURE_FUNCTION_OW CONSTANT
   CONSTANT_PRESSURE 0.0
  /
  PERMEABILITY_FUNCTION_WAT BURDINE_VG
   M 3.0
   WATER_CONNATE_SATURATION 0.0
   WATER_RESIDUAL_SATURATION 0.0
  END
  PERMEABILITY_FUNCTION_HC MOD_BROOKS_COREY
    M 2.0d0
    HYDROCARBON_RESIDUAL_SATURATION 0.0d0
  /
  !TEST
/

#=========================== EOSs =============================================

EOS WATER
  SURFACE_DENSITY 1000.00d0 kg/m^3
  DENSITY CONSTANT 1000.00d0
  VISCOSITY CONSTANT 1.0d-3 ! 1 cp
END

EOS OIL
  FORMULA_WEIGHT 1000.0d0
  SURFACE_DENSITY 1000.0 kg/m^3
  PVDO
    DATA
      TEMPERATURE 15.0
        1	1       1.0
        2	0.99999 1.0
        5	0.99996 1.0
        10	0.99991 1.0
        20	0.99981 1.0
        30	0.99971 1.0
        50	0.99951 1.0
        75	0.99926 1.0
        100	0.99901 1.0
        150	0.99851 1.0
        200	0.99801 1.0
        250	0.99751 1.0
        300	0.99701 1.0
        350	0.99651 1.0
        400	0.99601 1.0
        450	0.99551 1.0
        500	0.99501 1.0
      END !end TEMP block
      !TEMPERATURES 30.0 C
      !END
    END !endDATA
    !specify temperature dependency for viscosity
  END !end PVDO
  ENTHALPY QUADRATIC_TEMP ! h = c1*(t-t1) + 0.5*c2*(t-t2)
    TEMP_REF_VALUES   15.6d0  15.6d0    !t1, t2 [°C]
    TEMP_COEFFICIENTS  0.0     0.0d0    !c1, c2 [J/kg/°C]
  END !end Enthlapy
END !end EOS OIL

EOS GAS
  FORMULA_WEIGHT 16.04d0
  SURFACE_DENSITY 0.678366 kg/m^3
  PVDG
    DATA
      TEMPERATURE 15.0
        1.01325	1         0.02
        2	0.506625        0.02
        5	0.20265         0.02
        10	0.101325      0.02
        20	0.0506625     0.02
        30	0.033775      0.02
        50	0.020265      0.02
        75	0.01351       0.02
        100	0.0101325     0.02
        125	0.008106      0.02
        150	0.006755      0.02
        175	0.00579       0.02
        200	0.00506625    0.02
        205	0.004942683   0.02
        210	0.004825      0.02
        220	0.004605682   0.02
        230	0.004405435   0.02
        240	0.004221875   0.02
        250	0.004053      0.02
        275	0.003684545   0.02
        300	0.0033775     0.02
        350	0.002895      0.02
        400	0.002533125   0.02
        450	0.002251667   0.02
        500	0.0020265     0.02
      END !end TEMP block
      !TEMPERATURES 30.0 C
      !END
    END !endDATA
    !specify temperature dependency for viscosity
  END !end PVDG
  !DENSITY   DEFAULT
  !VISCOSITY CONSTANT 2.0d-5 ! 0.02 cp
END
#=========================== regions ==========================================
REGION all
COORDINATES
-1.d20 -1.d20 -1.d20
 1.d20  1.d20  1.d20
/
/

REGION inj1
 BLOCK  1 1 1 1 1 1
END

REGION EAST
  FACE EAST
  COORDINATES
    1000   0.d0 -900.d0
    1000 100.d0 -1900.d0
  /
END

REGION obs_inje
 BLOCK  1 1 1 1 1 1
END


REGION obs_prod
 BLOCK  10 10 1 1 1 1
END


#=========================== observation ============================
skip
OBSERVATION
  REGION obs_inje
END

OBSERVATION
  REGION obs_prod
END
noskip
#=========================== wells ==================================

! Rate is 100 rm3/day - so 1 PV in 1000 days

FLOW_CONDITION gas_injector_cond
  TYPE
    RATE volumetric_rate
    TEMPERATURE DIRICHLET
  /
  RATE 0.0000000 0.000000 100 0 m^3/day m^3/day m^3/day MW
  TEMPERATURE 15.0 C
/

#=========================== flow conditions ==================================
FLOW_CONDITION initial_press
  TYPE
    OIL_PRESSURE DIRICHLET
    OIL_SATURATION DIRICHLET
    GAS_SATURATION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  OIL_PRESSURE 20.0D6 Pa !200bars
  OIL_SATURATION 1.0d0 !With this accounts for connate water
  GAS_SATURATION 0.0d0 !
  TEMPERATURE 15.0d0 C  !up to here it refers to primary vars
  !DATUM 0.d0 0.d0 -1530.0d0
/

#=========================== condition couplers ===============================
INITIAL_CONDITION initial
FLOW_CONDITION initial_press
REGION all
/

SOURCE_SINK gas_injection1
  FLOW_CONDITION gas_injector_cond
  REGION inj1
END

BOUNDARY_CONDITION producer
  FLOW_CONDITION initial_press
  REGION EAST
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL formation
END

END_SUBSURFACE
