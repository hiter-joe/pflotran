#  Black oil test run 9 - thermal boundaries

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW Flow
      MODE BLACK_OIL
      OPTIONS
       MAXIMUM_PRESSURE_CHANGE 5.D4
      /
    / ! end of subsurface_flow
  / ! end of process models
END  !! end simulation block

SUBSURFACE
#=========================== regression =======================================
REGRESSION
  CELLS
    1
    2
    11
    25
  /
END
#=========================== discretization ===================================
! PV~25*100*100*100*0.04~1E6 m3
GRID
  TYPE structured
  ORIGIN 0.d0 0.d0 -1000.d0
  NXYZ 25 1 1
  DXYZ
    100.0
    100.0
    100.0
  END
END

#=========================set up standard conditions ==========================
#  these are used for the computation of the gas surface volumes
REFERENCE_PRESSURE 1.0D5 Pa
REFERENCE_TEMPERATURE 15.0 !C

#=========================== solver options ===================================

TIMESTEPPER FLOW
  TS_ACCELERATION 100
/

NEWTON_SOLVER FLOW
  STOL 1.0D-16
  RTOL 1.0D-8
  ITOL 1.0D-8
  MAXIT 20
END

LINEAR_SOLVER FLOW
END

#=========================== times ============================================
TIME
  FINAL_TIME 2000 d
  INITIAL_TIMESTEP_SIZE 1.0d-4 d
  MINIMUM_TIMESTEP_SIZE 1.0D-10 d
  MAXIMUM_TIMESTEP_SIZE 10 d at 0. d
END

#=========================== output options ===================================
skip
OUTPUT
  FORMAT HDF5
  TIMES d 0.0 0.1 0.9 1.0 5.0 20.0 50.0 100.0 200.0 300.0 400.0 500.0 750 1000
  MASS_BALANCE_FILE
    PERIODIC TIMESTEP 1
  END
  OBSERVATION_FILE
    PERIODIC TIMESTEP 1
    VARIABLES
      LIQUID_SATURATION
      LIQUID_DENSITY
      LIQUID_MOBILITY
      LIQUID_VISCOSITY
      OIL_PRESSURE
      OIL_SATURATION
      OIL_DENSITY
      OIL_MOBILITY
      OIL_VISCOSITY
      TEMPERATURE
      POROSITY
      PERMEABILITY_X
    /
  END
END
noskip
#=========================== material properties ==============================
MATERIAL_PROPERTY formation
  ID 1
  POROSITY 0.04
  TORTUOSITY 1.d0
  ROCK_DENSITY 2.350d3
  SPECIFIC_HEAT 1.0d3
  THERMAL_CONDUCTIVITY_DRY 1.541d0
  THERMAL_CONDUCTIVITY_WET 1.541d0
  SOIL_COMPRESSIBILITY_FUNCTION QUADRATIC
  SOIL_COMPRESSIBILITY    1.0d-10 ! 1/Pa
  SOIL_REFERENCE_PRESSURE 1.0D5
  CHARACTERISTIC_CURVES ch1
  PERMEABILITY
    PERM_X 0.9869E-12 !1000 mD
    PERM_Y 0.9869E-13 !100 mD
    PERM_Z 0.9869E-14 !10 mD
  /
/

#=========================== datasets ==============================
#=========================== saturation functions =============================
CHARACTERISTIC_CURVES ch1
! Capillary pressures
 SATURATION_FUNCTION_OWG VAN_GENUCHTEN_OW
  M 0.44380d0
  ALPHA 5.0e-05
  WATER_RESIDUAL_SATURATION 0.0
  MAX_CAPILLARY_PRESSURE    0.0
 /
 SATURATION_FUNCTION_OWG BROOKS_COREY_OG
  LAMBDA 0.4d0
  ALPHA  0.5e-03
  OIL_RESIDUAL_SATURATION 0.0
  MAX_CAPILLARY_PRESSURE 0.0
 /
! Relative permeabilities
 PERMEABILITY_FUNCTION_OWG BURDINE_VG_WAT
   M 3.0
   WATER_RESIDUAL_SATURATION 0.0
 END
 PERMEABILITY_FUNCTION_OWG ECLIPSE_OIL
  WATER_RESIDUAL_SATURATION 0.0d0
  GAS_RESIDUAL_SATURATION   0.0d0
  PERMEABILITY_FUNCTION_OW MOD_BROOKS_COREY_OIL
   M 2.0
   OIL_RESIDUAL_SATURATION 0.0d0
  END
  PERMEABILITY_FUNCTION_OG MOD_BROOKS_COREY_OIL
   M 2.0
   OIL_RESIDUAL_SATURATION 0.0d0
  END
 END
 PERMEABILITY_FUNCTION_OWG MOD_BROOKS_COREY_GAS
  WATER_RESIDUAL_SATURATION 0.0
  OIL_RESIDUAL_SATURATION 0.0d0
  GAS_RESIDUAL_SATURATION 0.0
  M 2.0
 END
/
#=========================== EOSs =============================================
EOS WATER
  DENSITY CONSTANT 1000.00d0
  VISCOSITY CONSTANT 1.0d-3 ! 1 cp
END

EOS OIL
  FORMULA_WEIGHT 800.0d0
  SURFACE_DENSITY 1000.0 kg/m^3
  PVCO
    DATA_UNITS ! Metric in the Eclipse sense
      PRESSURE Bar           !Bar is default
      RS  m^3/m^3            !m^3/m^3 is default
      FVF m^3/m^3            !m^3/m^3 is default
      VISCOSITY cP           !cP default
      COMPRESSIBILITY 1/Bar  !1/Bar is default
      VISCOSIBILITY   1/Bar  !1/Bar is default
    END
    DATA
      TEMPERATURE 10.0
          1.0 0.0   1.01  1.0   0.0001985 0.001308
        500.0 100   2.02  0.2   0.0001985 0.001308
      END !end TEMP block
      TEMPERATURE 100.0
          1.0 0.0   1.01  1.0   0.0001985 0.001308
        500.0 200   2.02  0.2   0.0001985 0.001308
      END !end TEMP block
    END !endDATA
  END !end PVDO
  ENTHALPY QUADRATIC_TEMP ! h = c1*(t-t1) + 0.5*c2*(t-t2)
    TEMP_REF_VALUES   15.6d0  15.6d0    !t1, t2 [°C]
    TEMP_COEFFICIENTS  0.0     0.0d0    !c1, c2 [J/kg/°C]
  END !end Enthlapy
END !end EOS OIL

EOS GAS
  FORMULA_WEIGHT 16.04d0
  SURFACE_DENSITY 0.678366 kg/m^3
  PVDG
    DATA_UNITS ! Metric in the Eclipse sense
      PRESSURE  Bar
      FVF       m^3/m^3
      VISCOSITY cP
    END
    DATA
      TEMPERATURE 10.0
          1.013529 0.9357635 0.0080
         18.250422 0.0678972 0.0096
         35.487314 0.0352259 0.0112
         69.961099 0.0179498 0.0140
        138.908669 0.0090619 0.0189
        173.382454 0.0072653 0.0208
        200        0.0063404 0.0223
        207.856239 0.0060674 0.0228
        276.803809 0.0045534 0.0268
        345.751379 0.0036439 0.0309
        621.541659 0.0021672 0.0470
      END !end TEMP block
      TEMPERATURE 100.0
          1.013529 0.9357635 0.0080
         18.250422 0.0678972 0.0096
         35.487314 0.0352259 0.0112
         69.961099 0.0179498 0.0140
        138.908669 0.0090619 0.0189
        173.382454 0.0072653 0.0208
        200        0.0063404 0.0223
        207.856239 0.0060674 0.0228
        276.803809 0.0045534 0.0268
        345.751379 0.0036439 0.0309
        621.541659 0.0021672 0.0470
      END !end TEMP block
    END !endDATA
    !specify temperature dependency for viscosity
  END !end PVDG
END

#=========================== regions ==========================================
REGION all
COORDINATES
-1.d20 -1.d20 -1.d20
 1.d20  1.d20  1.d20
/
/

REGION obs_inje
 BLOCK  1 1 1 1 1 1
END

REGION obs_prod
 BLOCK 25 25 1 1 1 1
END

REGION WEST
  FACE WEST
  COORDINATES
    0   0.d0 -900.d0
    0 100.d0 -1900.d0
  /
END

REGION EAST
  FACE EAST
  COORDINATES
    2500   0.d0 -900.d0
    2500 100.d0 -1900.d0
  /
END
#=========================== observation ============================

OBSERVATION
  REGION obs_inje
END

OBSERVATION
  REGION obs_prod
END

#=========================== wells ==================================

#=========================== flow conditions ==================================
FLOW_CONDITION initial_press
  TYPE
    OIL_PRESSURE dirichlet
    OIL_SATURATION dirichlet
    TEMPERATURE dirichlet
    BUBBLE_POINT dirichlet
  /
  OIL_PRESSURE 20.0D6 !200bars
  OIL_SATURATION 1.0d0
  TEMPERATURE 15.0d0 C  !up to here it refers to primary vars
  BUBBLE_POINT 10.0D6 ! 100bars
  DATUM 0.d0 0.d0 -1000.0d0
/

FLOW_CONDITION high_press
  TYPE
    OIL_PRESSURE dirichlet
    OIL_SATURATION dirichlet
    TEMPERATURE dirichlet
    BUBBLE_POINT dirichlet
  /
  OIL_PRESSURE 22.0D6 !200bars
  OIL_SATURATION 1.0d0
  TEMPERATURE 80.0d0 C  !up to here it refers to primary vars
  BUBBLE_POINT 15.0D6 ! 100bars
  DATUM 0.d0 0.d0 -1000.0d0
/

FLOW_CONDITION low_press
  TYPE
    OIL_PRESSURE dirichlet
    OIL_SATURATION dirichlet
    TEMPERATURE dirichlet
    BUBBLE_POINT dirichlet
  /
  OIL_PRESSURE 18.0D6 !200bars
  OIL_SATURATION 1.0d0
  TEMPERATURE 15.0d0 C  !up to here it refers to primary vars
  BUBBLE_POINT 5.0D6 ! 100bars
  DATUM 0.d0 0.d0 -1000.0d0
/

#=========================== condition couplers ==============================

INITIAL_CONDITION initial
FLOW_CONDITION initial_press
REGION all
/

BOUNDARY_CONDITION input
  FLOW_CONDITION high_press
  REGION WEST
END

BOUNDARY_CONDITION output
  FLOW_CONDITION low_press
  REGION EAST
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL formation
END

END_SUBSURFACE
