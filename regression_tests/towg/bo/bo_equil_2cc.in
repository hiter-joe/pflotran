# PO 9-Feb-2019
# BO equilibration test based on SPE1 data 
# Using 2 characteristic curves in the domain

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW Flow
      MODE BLACK_OIL
      OPTIONS
       ISOTHERMAL
      /
    / ! end of subsurface_flow
  / ! end of process models
  /
END  !! end simulation block

SUBSURFACE

#=========================== numerical methods ================================
NUMERICAL_METHODS FLOW

  TIMESTEPPER
    TS_ACCELERATION 100
  /

  NEWTON_SOLVER
    STOL 1.0D-18
    RTOL 1.0D-8
    ITOL 1.0D-8
    MAXIMUM_NUMBER_OF_ITERATIONS 20
    ANALYTICAL_JACOBIAN
  /

END

#=========================== regression =======================================
REGRESSION
  CELL_IDS
    2
    5
    7
    10
  /
END

#=========================== discretization ===================================

GRID
  TYPE STRUCTURED
  ORIGIN 0.d0 0.d0 -2500.0
  NXYZ 1 1 10
  DXYZ
    10.0
    10.0
    10.0
  END
END

#=========================set up standard conditions ==========================

!REFERENCE_PRESSURE    1.0D5 Pa
!REFERENCE_TEMPERATURE 15.0 !C

#=========================== solver options ===================================




#=========================== times ============================================
TIME
  FINAL_TIME 3650 d
  INITIAL_TIMESTEP_SIZE 1.0d-1 d
  MINIMUM_TIMESTEP_SIZE 1.0D-10 d
  MAXIMUM_TIMESTEP_SIZE 50 d at 0. d
END

#=========================== output options ===================================
skip
OUTPUT
  FORMAT HDF5
  TIMES d 0.0 66 365 720 1000 2000 3000 3650
  PRINT_PRIMAL_GRID
  EXPLICIT_GRID_PRIMAL_GRID_TYPE cell_centered
  MASS_BALANCE_FILE
    PERIODIC TIMESTEP 1
  END
  OBSERVATION_FILE
    PERIODIC TIMESTEP 1
    VARIABLES
      LIQUID_SATURATION
      LIQUID_DENSITY
      LIQUID_MOBILITY
      LIQUID_VISCOSITY
      OIL_PRESSURE
      OIL_SATURATION
      OIL_DENSITY
      OIL_MOBILITY
      OIL_VISCOSITY
      GAS_SATURATION
      GAS_DENSITY
      GAS_MOBILITY
      !GAS_VISCOSITY      
      TEMPERATURE
      POROSITY
      PERMEABILITY_X
    /
  END
END
noskip
#=========================== material properties ==============================

MATERIAL_PROPERTY mat_lower
  ID 1
  POROSITY 0.1
  TORTUOSITY 1.d0
  ROCK_DENSITY 2.350d3
  SPECIFIC_HEAT 1.0d3
  THERMAL_CONDUCTIVITY_DRY 1.541d0
  THERMAL_CONDUCTIVITY_WET 1.541d0
  SOIL_COMPRESSIBILITY_FUNCTION QUADRATIC
  SOIL_COMPRESSIBILITY    4.35d-10 ! 1/Pa
  SOIL_REFERENCE_PRESSURE 1.0D5
  CHARACTERISTIC_CURVES ch1
  PERMEABILITY
    PERM_X 1.e-13
    PERM_Y 1.e-13
    PERM_Z 1.e-14
  /
/


MATERIAL_PROPERTY mat_upper
  ID 2
  POROSITY 0.1
  TORTUOSITY 1.d0
  ROCK_DENSITY 2.350d3
  SPECIFIC_HEAT 1.0d3
  THERMAL_CONDUCTIVITY_DRY 1.541d0
  THERMAL_CONDUCTIVITY_WET 1.541d0
  SOIL_COMPRESSIBILITY_FUNCTION QUADRATIC
  SOIL_COMPRESSIBILITY    4.35d-10 ! 1/Pa
  SOIL_REFERENCE_PRESSURE 1.0D5
  CHARACTERISTIC_CURVES ch2
  PERMEABILITY
    PERM_X 1.e-13
    PERM_Y 1.e-13
    PERM_Z 1.e-14
  /
/

