#=========================== regions ==========================================
REGION all
COORDINATES
-1.d20 -1.d20 -1.d20
 1.d20  1.d20  1.d20
/
/

REGION lower_region
 BLOCK 1 1 1 1 1 5
END

REGION upper_region
 BLOCK 1 1 1 1 6 10
END

#=========================== observations ==============================

#=========================== wells ==================================

#=========================== flow conditions ==================================
FLOW_CONDITION equilibration
  TYPE
    PRESSURE HYDROSTATIC
  /
  PRESSURE 330.0 Bar
  TEMPERATURE_AT_DATUM 130.0d0 C
  GRADIENT_D
    TEMPERATURE 0.d0 0.d0 3.0d-2
  /
  DATUM_D 2480.0 m
  OGC_D 2430.0 m
  PCOG_OGC 0.0D0 Pa !ensure ogc at a depth of 2430.0 as Pcog(sg) = 0 in upper region
  OWC_D 2470.0 m
  PCOW_OWC 5.0D4 Pa !0.5 Bar
  BUBBLE_POINT_TABLE
   D_UNITS m
   PRESSURE_UNITS Bar
   PBVD
     2430.0 327.0
     2470.0 328.0
   /
  END
/

#=========================== condition couplers ==============================

INITIAL_CONDITION equilibration
FLOW_CONDITION equilibration
REGION all
/

#=========================== stratigraphy couplers ============================

STRATA
  MATERIAL mat_lower
  REGION lower_region
END

STRATA
  MATERIAL mat_upper
  REGION upper_region
END

END_SUBSURFACE
