      END !end TEMP block
    END !endDATA
  END !end PVDO
  ENTHALPY QUADRATIC_TEMP ! h = c1*(t-t1) + 0.5*c2*(t-t2)
    TEMP_REF_VALUES   15.6d0  15.6d0    !t1, t2 [°C]
    TEMP_COEFFICIENTS  0.0     0.0d0    !c1, c2 [J/kg/°C]
  END !end Enthlapy
END !end EOS OIL

EOS GAS
  FORMULA_WEIGHT 16.04d0
  SURFACE_DENSITY 0.97052664 kg/m^3
  PVDG
    DATA_UNITS ! Metric in the Eclipse sense
      PRESSURE  Bar
      FVF       m^3/m^3
      VISCOSITY cP
    END
    DATA
      TEMPERATURE 15.0
          1.013529 0.9357635 0.0080
         18.250422 0.0678972 0.0096
         35.487314 0.0352259 0.0112
         69.961099 0.0179498 0.0140
        138.908669 0.0090619 0.0189
        173.382454 0.0072653 0.0208
        207.856239 0.0060674 0.0228
        276.803809 0.0045534 0.0268
        345.751379 0.0036439 0.0309
        621.541659 0.0021672 0.0470
      END !end TEMP block
    END !endDATA
    !specify temperature dependency for viscosity
  END !end PVDG
END

#=========================== regions ==========================================
REGION all
COORDINATES
-1.d20 -1.d20 -1.d20
 1.d20  1.d20  1.d20
/
/

#=========================== wells ==================================

WELL_DATA injg
  RADIUS 0.0762 m
  WELL_TYPE GAS_INJECTOR
  BHPL     1000    Bar
  TARG_GSV 2831684 m^3/day
  CIJK 1 1 3 3   
END

WELL_DATA prod
  RADIUS 0.0762 m
  WELL_TYPE PRODUCER
  BHPL      68.9476 Bar
  TARG_OSV  3179.7 m^3/day
  CIJK 3 3 1 1 
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial_press
  TYPE
    OIL_PRESSURE dirichlet
    OIL_SATURATION dirichlet
    BUBBLE_POINT dirichlet
    TEMPERATURE dirichlet
  /
  OIL_PRESSURE 33.094D6 !331 bars
  OIL_SATURATION 0.88d0
  BUBBLE_POINT 27.6804D6 !276 bars
  TEMPERATURE 15.0d0 C  !up to here it refers to primary vars
  DATUM 0.d0 0.d0 -2540.508
/

#=========================== regression data =================================

REGRESSION
  CELLS
    1
    27
  /
END

#=========================== condition couplers ==============================

INITIAL_CONDITION initial
FLOW_CONDITION initial_press
REGION all
/

#=========================== stratigraphy couplers ============================

STRATA
  REGION all
  MATERIAL formation
END

END_SUBSURFACE
