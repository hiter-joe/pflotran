SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE richards
    / 
  / 
END

SUBSURFACE

REGRESSION
  CELLS_PER_PROCESS 100
END

EOS WATER
  DENSITY EXPONENTIAL 1000.0 2000000.0 4.400d-10
  VISCOSITY CONSTANT 0.00089
END

GRID
  TYPE structured cylindrical
  BOUNDS
    0.0 0.0 9999 
    4000 20.0 9999 
  /
  NXYZ 100 1 10 
  GRAVITY 0.0 0.0 0.0 
END

TIME
  FINAL_TIME 200.0 d
  INITIAL_TIMESTEP_SIZE 2.0 d
  MAXIMUM_TIMESTEP_SIZE 8.0 d
END

MATERIAL_PROPERTY aquitardprimeprime
  ID 1
  CHARACTERISTIC_CURVES default
  POROSITY 0.25
  TORTUOSITY 1.0
  PERMEABILITY
    PERM_X 1.000d-18
    PERM_Y 1.000d-18
    PERM_Z 1.000d-18
  /
  SOIL_COMPRESSIBILITY_FUNCTION LINEAR 
  SOIL_COMPRESSIBILITY 1.000d-07
  SOIL_REFERENCE_PRESSURE 2000000.0
END

MATERIAL_PROPERTY aquifer
  ID 2
  CHARACTERISTIC_CURVES default
  POROSITY 0.25
  TORTUOSITY 1.0
  PERMEABILITY
    PERM_X 1.000d-13
    PERM_Y 1.000d-13
    PERM_Z 1.000d-13
  /
  SOIL_COMPRESSIBILITY_FUNCTION LINEAR 
  SOIL_COMPRESSIBILITY 1.000d-08
  SOIL_REFERENCE_PRESSURE 2000000.0
END

MATERIAL_PROPERTY aquitardprime
  ID 3
  CHARACTERISTIC_CURVES default
  POROSITY 0.25
  TORTUOSITY 1.0
  PERMEABILITY
    PERM_X 1.000d-18
    PERM_Y 1.000d-18
    PERM_Z 1.000d-18
  /
  SOIL_COMPRESSIBILITY_FUNCTION LINEAR 
  SOIL_COMPRESSIBILITY 1.000d-07
  SOIL_REFERENCE_PRESSURE 2000000.0
END

skip
OUTPUT
  TIMES  d 25.0 50.0 100.0 150.0 200.0
  FORMAT TECPLOT POINT
  FORMAT HDF5
  VARIABLES 
    POROSITY
    LIQUID_PRESSURE
    PERMEABILITY
  /
END
noskip

FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.000d-09
END

CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION VAN_GENUCHTEN
   ALPHA 0.0001
   M 0.5
   LIQUID_RESIDUAL_SATURATION 0.1
  / 
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
   M 0.5
   LIQUID_RESIDUAL_SATURATION 0.1
  / 
END

REGION all
  COORDINATES
    0.0 0.0 0.0 
    4000 4000 20.0 
  /
END

REGION aquitardprimeprime
  COORDINATES
    0.0 0.0 0.0 
    4000 4000 0.0 
  /
END

REGION aquifer
  COORDINATES
    0.0 0.0 0.0 
    4000 4000 20.0 
  /
END

REGION aquitardprime
  COORDINATES
    0.0 0.0 20.0 
    4000 4000 20.0 
  /
END

REGION bottom
  FACE BOTTOM
  COORDINATES
    0.0 0.0 0.0 
    4000 4000 0.0 
  /
END

REGION top
  FACE TOP
  COORDINATES
    0.0 0.0 20.0 
    4000 4000 20.0 
  /
END

REGION well
  FACE WEST
  COORDINATES
    0.0 0.0 0.0 
    0.0 4000 20.0 
  /
END

REGION far_boundary
  FACE EAST
  COORDINATES
    4000 0.0 0.0 
    4000 4000 20.0 
  /
END

FLOW_CONDITION initial
  DATUM 0.0 0.0 0.0
  TYPE
    PRESSURE dirichlet
  /
    PRESSURE 2000000.0
END

FLOW_CONDITION top_flow
  TYPE
    FLUX neumann
  /
    FLUX 0.0
END

FLOW_CONDITION well
  TYPE
    RATE volumetric_rate
  /
    RATE -1.000d-05
END

INITIAL_CONDITION initial
  FLOW_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION top
  FLOW_CONDITION top_flow
  REGION top
END

BOUNDARY_CONDITION bottom
  FLOW_CONDITION top_flow
  REGION bottom
END

BOUNDARY_CONDITION far_boundary
  FLOW_CONDITION top_flow
  REGION far_boundary
END

SOURCE_SINK well
  FLOW_CONDITION well
  REGION well
END

STRATA
  REGION aquitardprimeprime
  MATERIAL aquitardprimeprime
END

STRATA
  REGION aquitardprime
  MATERIAL aquitardprime
END

STRATA
  REGION aquifer
  MATERIAL aquifer
END

END_SUBSURFACE


