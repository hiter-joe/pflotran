SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
#=========================== solver options ===================================
#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 4 4 4
  BOUNDS
    0.d0 0.d0 0.d0
    4.d0 4.d0 4.d0
  /
END

#=========================== fluid properties =================================
#=========================== datasets =========================================
#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  CHARACTERISTIC_CURVES sf1
  PERMEABILITY
    PERM_ISO 1.d-12
  /
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES sf1
  DEFAULT
END

#=========================== output options ===================================
OUTPUT
#  TIMES d 0.001 0.01 0.1 1. 10.
#  PERIODIC TIME 1 d
  TIME_UNITS y
  FORMAT TECPLOT BLOCK
  FORMAT HDF5
  VELOCITY_AT_FACE
END

#=========================== times ============================================
TIME
  FINAL_TIME 100.d0 d
  INITIAL_TIMESTEP_SIZE 1.d-6 d
  MAXIMUM_TIMESTEP_SIZE 10.d0 d
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    -1.d20 -1.d20 -1.d20
    1.d20 1.d20 1.d20
  /
END

REGION west
  FACE WEST
  COORDINATES
    0.d0 -1.d20 -1.d20
    0.d0 1.d20 1.d20
  /
END

REGION south
  FACE SOUTH
  COORDINATES
    -1.d20 0.d0 -1.d20
    1.d20 0.d0 1.d20
  /
END

REGION bottom
  FACE BOTTOM
  COORDINATES
    -1.d20 -1.d20 0.d0 
    1.d20 1.d20 0.d0 
  /
END

REGION region1
  FILE ./4x4x4/material_and_regions.h5
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE HYDROSTATIC
  /
  DATUM 0.d0 0.d0 35.d0
  GRADIENT
    PRESSURE -1.6666667d-2 -1.6666667d-2 0.d0
  /
  PRESSURE 101325 ! Pa
END

FLOW_CONDITION bottom_pressure
  TYPE
    PRESSURE HYDROSTATIC
  /
  DATUM 0.d0 0.d0 34.93333332d0
  GRADIENT
    PRESSURE -1.6666667d-2 -1.6666667d-2 0.d0
  /
  PRESSURE 101325 ! Pa
END

#=========================== condition couplers ===============================
INITIAL_CONDITION
  FLOW_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION west
  FLOW_CONDITION initial
  REGION west
END

BOUNDARY_CONDITION south
  FLOW_CONDITION initial
  REGION south
END

BOUNDARY_CONDITION bottom
  FLOW_CONDITION bottom_pressure
  REGION bottom
END

BOUNDARY_CONDITION region1
  FLOW_CONDITION initial
  REGION region1
END

#=========================== stratigraphy couplers ============================
STRATA
  FILE ./4x4x4/material_and_regions.h5
END

END_SUBSURFACE
