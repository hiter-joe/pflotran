#Description: 1D Calcite dissolution problem

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
    SUBSURFACE_TRANSPORT transport
      MODE GIRT
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS_PER_PROCESS 5
END

#=========================== DATASETS =========================================
DATASET Permeability
  FILENAME ./lower_directory/permeability.h5
END

#=========================== flow mode ========================================

#=========================== chemistry ========================================
EXTERNAL_FILE chemistry.txt

#geh: yes, chemistry.txt should end and the input should pick up here.
  OUTPUT
    PH
    TOTAL
    FREE_ION
    ALL
  /
END

#=========================== solver options ===================================
TIMESTEPPER FLOW
  MAX_STEPS 5
END

LINEAR_SOLVER FLOW
  SOLVER DIRECT
END

LINEAR_SOLVER TRANSPORT
  SOLVER DIRECT
END

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED
  NXYZ 100 1 1
  BOUNDS
    0.d0 0.d0 0.d0
    100.d0 1.d0 1.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
  PERMEABILITY
    ISOTROPIC
    DATASET Permeability
  /
  CHARACTERISTIC_CURVES default
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES default
  DEFAULT
END

#=========================== output options ===================================
EXTERNAL_FILE output.txt

#=========================== times ============================================
TIME
  FINAL_TIME 25.d0 y
  INITIAL_TIMESTEP_SIZE 1.d0 h
  MAXIMUM_TIMESTEP_SIZE 2.5d-1 y
END

#=========================== regions ==========================================
EXTERNAL_FILE regions.txt

EXTERNAL_FILE ./lower_directory/conditions_redirect.txt
#=========================== flow conditions ==================================
#=========================== transport conditions =============================
#=========================== constraints ======================================
#=========================== condition couplers ===============================
#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

END_SUBSURFACE
