#Description: 1D test problem for tracer transport




SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_TRANSPORT transport
      MODE GIRT
      OPTIONS
        MULTIPLE_CONTINUUM
        NERNST_PLANCK
      /
    /
  /
END

SUBSURFACE

#=========================== chemistry ========================================
CHEMISTRY

    PRIMARY_SPECIES
        #Tracer
        H+
        Na+
        Cl-
        NO3-        
    END
    SECONDARY_SPECIES
        OH-
    END

    AQUEOUS_DIFFUSION_COEFFICIENTS
        H+ 9.31d-9
        Na+ 1.33d-9
        Cl- 2.03d-9
        NO3- 1.90d-9
        OH- 5.27d-9
    END


    ACTIVITY_COEFFICIENTS TIMESTEP
    DATABASE hanford_reduced.dat
    LOG_FORMULATION
    OUTPUT
        PH
        all
        TOTAL
        FREE_ION
    /
END


#=========================== discretization ===================================
GRID
    TYPE structured
    ORIGIN 0.d0 0.d0 0.d0
    NXYZ 1 1 1 #100 1 1
    BOUNDS
        0.d0 0.d0 0.d0
        1.d-4 1.0 1.0 #1.d-2 1.0 1.0
    /
END

#=========================== numerical methods =================================
NUMERICAL_METHODS TRANSPORT
  TIMESTEPPER
    CFL_GOVERNOR 1.d0
  /
  NEWTON_SOLVER
	MATRIX_TYPE AIJ  
	PRECONDITIONER_MATRIX_TYPE AIJ
	#DTOL 1.d20
    RTOL 1.d-12
	ATOL 1.d-12
	STOL 1.d-20
	MAXIMUM_NUMBER_OF_ITERATIONS 15
  /
  LINEAR_SOLVER
    SOLVER DIRECT
  /
END

#NUMERICAL_METHODS TRANSPORT
  #NEWTON_SOLVER TRANSPORT
    #ATOL 1d-12
    #RTOL 1d-12
    #STOL 1d-25
    #MAX_NORM 1d8
    #ITOL 1d-12
    #ITOL_SEC 1d-12
    #MAXIMUM_NUMBER_OF_ITERATIONS 100
    #MAXF 100
  #END
#END


#=========================== flow velocity ===================================

SPECIFIED_VELOCITY
  UNIFORM? YES
  DATASET 0d0 0.d0 0.d0 m/yr
END

#=========================== fluid properties =================================
FLUID_PROPERTY
    LIQUID_DIFFUSION_COEFFICIENT 2.03d-9
/

#=========================== material properties ==============================
MATERIAL_PROPERTY diffusiveMaterial
    ID 1
    POROSITY 50000.d0 #5000.d0
    TORTUOSITY 1.d0
    LONGITUDINAL_DISPERSIVITY 0d0
    CHARACTERISTIC_CURVES default
    SECONDARY_CONTINUUM #afegit PAULA
      TYPE SLAB
      LENGTH 1.d-2 #9.8e-2
      AREA 1.0 #100 #1.004e1
      NUM_CELLS 100 #20
      !LOG_GRID_SPACING
      EPSILON 0.01 #volume of fracture/total volume
      	#(0.01m/100cells)/0.01m=0.01
      LIQUID_DIFFUSION_COEFFICIENT 2.03d-9
      POROSITY 1.d0
      TORTUOSITY 1.d0
    /
/

#MATERIAL_PROPERTY sourceMaterial
    #ID 2
    #POROSITY 50000d0
    #TORTUOSITY 1.d0
    #LONGITUDINAL_DISPERSIVITY 0d0
    #SATURATION_FUNCTION default
#/

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES default
  DEFAULT
END

#=========================== output options ===================================
OUTPUT

  SNAPSHOT_FILE
    FORMAT HDF5
    FORMAT TECPLOT POINT
    PERIODIC TIME 1 h
    #TIMES h 0.1 0.5 1
    VARIABLES
    /
    VELOCITY_AT_CENTER
  /
  OBSERVATION_FILE
  PERIODIC TIME 0.000416 day
  VARIABLES
    /
  /
/

#=========================== times ============================================
TIME
    FINAL_TIME 1 h
    INITIAL_TIMESTEP_SIZE 1.d-7 h #0.01 h
    MAXIMUM_TIMESTEP_SIZE 0.001 h
/

#=========================== regions ==========================================

REGION source
    COORDINATES
    0.d0 0.d0 0.d0
    1.d-4 1.0  1.0 #1.d-2 1.0  1.0
    /
END


REGION westRegion
FACE WEST
COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 1.d0
    /
END


#REGION east
    #FACE EAST
    #COORDINATES
    #1.d-2 0.d0 0.d0
    #1.d-2 1.0 1.0
    #/
#END

#=========================== observations =====================================

OBSERVATION
    #REGION east
    #VELOCITY
    REGION source
    SECONDARY_CONCENTRATION
/

#=========================== transport conditions =============================


TRANSPORT_CONDITION sourceConcentrationCondition
    TYPE dirichlet
    CONSTRAINT_LIST
    0.d0 sourceConcentrationConstraint
    /
END

#TRANSPORT_CONDITION iniPimConcCondition
    #TYPE zero_gradient
    #CONSTRAINT_LIST
    #0.d0 iniPrimConcConstraint
    #/
#END



#=========================== constraints ======================================
CONSTRAINT sourceConcentrationConstraint
    CONCENTRATIONS
    H+    6.001 pH
    Na+   1d-4 T
    Cl-   1d-4 T
    NO3-  1d-6 T #1d-7 T
    #Tracer 1.d-3 T
    /
END

#CONSTRAINT iniPrimConcConstraint
    #CONCENTRATIONS
    #H+          4.007 pH
    #Na+         1d-4 T
    #Cl-         1d-4 T
    #NO3-        1d-4 T
    #Tracer      1d-8 T
    #/
#END

SECONDARY_CONSTRAINT initialConcentrationConstraint
    CONCENTRATIONS
    H+          4.007 pH
    Na+         1d-4 T
    Cl-         1d-4 T
    NO3-        1d-4 T
    #Tracer      1d-8 T
    /
END


#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
    TRANSPORT_CONDITION sourceConcentrationCondition
    REGION source
END

#BOUNDARY_CONDITION
    #TRANSPORT_CONDITION sourceConcentrationCondition
    #REGION westRegion
#END

#=========================== stratigraphy couplers ============================
STRATA
    REGION source
    MATERIAL diffusiveMaterial
END


END_SUBSURFACE
