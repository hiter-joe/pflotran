# 1d unsaturated column with infiltration
# test for applying multiphase initial condition
# Jenn 06.18.2018
#
#=========================== flow mode ========================================

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE GENERAL
      OPTIONS
        #ISOTHERMAL
        MAX_PRESSURE_CHANGE 1.d8 #Pa
      /
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS_PER_PROCESS 4
END

#=========================== datasets =========================================
DATASET liquid_pressure
  FILENAME initcond_small2D.h5
  HDF5_DATASET_NAME hydrostatic_boundary_LP
END

DATASET gas_pressure
  FILENAME initcond_small2D.h5
  HDF5_DATASET_NAME hydrostatic_boundary_GP
END

DATASET gas_saturation
  FILENAME initcond_small2D.h5
  HDF5_DATASET_NAME hydrostatic_boundary_GS
END

DATASET temperature
  FILENAME initcond_small2D.h5
  HDF5_DATASET_NAME hydrostatic_boundary_T
END

#=========================== chemistry ========================================
#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 4 1 10
  DXYZ
   10.0d0
   10.0d0
   10.0d0
  END
END

#=========================== timestepper ======================================
TIMESTEPPER FLOW
#  MAX_STEPS 1
END

#=========================== times ============================================
TIME
  #FINAL_TIME 1.d6 yr
  FINAL_TIME 0.5d0 yr
  INITIAL_TIMESTEP_SIZE 1.d-6 y
  MAXIMUM_TIMESTEP_SIZE 1. y at 1. y
  MAXIMUM_TIMESTEP_SIZE 5. y at 10. y
  MAXIMUM_TIMESTEP_SIZE 50. y at 100. y
  MAXIMUM_TIMESTEP_SIZE 500. y at 1000. y
  MAXIMUM_TIMESTEP_SIZE 5000. y at 10000. y
END

#=========================== output options ===================================
OUTPUT
  OBSERVATION_FILE
    PERIODIC TIMESTEP 1
  /
  MASS_BALANCE_FILE
    PERIODIC TIMESTEP 1
  /
  SNAPSHOT_FILE
    FORMAT HDF5
    PRINT_COLUMN_IDS
    PERIODIC TIME 1.E-5 y between 0. y and 1.e-4 y
    PERIODIC TIME 1. y between 0. y and 10. y
    PERIODIC TIME 10. y between 0. y and 100. y
    PERIODIC TIME 100. y between 0. y and 1000. y
    PERIODIC TIME 1000. y between 0. y and 10000. y
    PERIODIC TIME 10000. y between 0. y and 100000. y
    PERIODIC TIME 100000. y between 0. y and 100000. y
  /
  VELOCITY_AT_CENTER
  VARIABLES
    MATERIAL_ID_KLUDGE_FOR_VISIT
    LIQUID_PRESSURE
    LIQUID_DENSITY
    LIQUID_SATURATION
    GAS_SATURATION
    GAS_PRESSURE
    TEMPERATURE
    THERMODYNAMIC_STATE
  /
END
#=========================== observation points ===============================

#=========================== fluid properties =================================
FLUID_PROPERTY
  PHASE LIQUID
  DIFFUSION_COEFFICIENT 1.d-9
END

FLUID_PROPERTY
  PHASE GAS
  DIFFUSION_COEFFICIENT 2.1d-5
END
#=========================== material properties ==============================
MATERIAL_PROPERTY alluvium
  ID 1
  CHARACTERISTIC_CURVES default
  POROSITY 0.20
  TORTUOSITY_FUNCTION_OF_POROSITY 1.4
  SOIL_COMPRESSIBILITY 1.6d-8 #1/Pa
  SOIL_COMPRESSIBILITY_FUNCTION DEFAULT
  SOIL_REFERENCE_PRESSURE 101325.d0
  ROCK_DENSITY 2700.
  THERMAL_CONDUCTIVITY_DRY 1.0d0
  THERMAL_CONDUCTIVITY_WET 2.0d0
  HEAT_CAPACITY 830.
  PERMEABILITY
    PERM_ISO 1.d-12
  /
/

#=========================== saturation functions =============================
#gravel? as cobbled (ha ha!) together by Emily - need to find real reference
CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION VAN_GENUCHTEN
    LIQUID_RESIDUAL_SATURATION 0.1d0
    M 0.5 #TH mode uses keyword LAMBDA,and sets m=lambda
    ALPHA 1.d-3
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    LIQUID_RESIDUAL_SATURATION 0.1d0
    M 0.5
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    LIQUID_RESIDUAL_SATURATION 0.1d0
    GAS_RESIDUAL_SATURATION 0.1d0
    M 0.5
  /
END

#=========================== flow conditions ==================================

FLOW_CONDITION initial
  TYPE 
    LIQUID_PRESSURE DIRICHLET
    GAS_PRESSURE DIRICHLET
    GAS_SATURATION DIRICHLET
    MOLE_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  LIQUID_PRESSURE DATASET liquid_pressure
  MOLE_FRACTION 1.d-8
  TEMPERATURE DATASET temperature
  GAS_PRESSURE DATASET gas_pressure
  GAS_SATURATION DATASET gas_saturation
END

FLOW_CONDITION infiltration
  TYPE
    LIQUID_FLUX NEUMANN
    GAS_FLUX NEUMANN
    TEMPERATURE DIRICHLET
  /
  LIQUID_FLUX 1. mm/yr
  GAS_FLUX 0. mm/yr
  TEMPERATURE 25.d0
END

#=========================== transport conditions and constraints ==============
#=========================== regions ==========================================
REGION all
  COORDINATES
    0.000000 0.000000 0.000000
    40.000000 10.000000 100.000000
  /
END

REGION top_face
  FACE TOP
  COORDINATES
    0.000000 0.000000 100.000000
    40.000000 10.000000 100.000000
  /
END

REGION bottom_face
  FACE BOTTOM
  COORDINATES
    0.000000 0.000000 0.000000
    40.000000 10.000000 0.000000
  /
END

REGION west_face
  FACE WEST
  COORDINATES
    0.000000 0.000000 0.000000
    0.000000 10.000000 100.000000
  /
END

REGION east_face
  FACE EAST
  COORDINATES
    40.000000 0.000000 0.000000
    40.000000 10.000000 100.000000
  /
END

REGION south_face
  FACE SOUTH
  COORDINATES
    0.000000 0.000000 0.000000
    40.000000 0.000000 100.000000
  /
END

REGION north_face
  FACE NORTH
  COORDINATES
    0.000000 10.000000 0.000000
    40.000000 10.000000 100.000000
  /
END

#======================= boundary condition couplers ===========================
BOUNDARY_CONDITION top_face
  FLOW_CONDITION infiltration
  REGION top_face
END

#============================= initial condition couplers ======================
INITIAL_CONDITION initial
  FLOW_CONDITION initial
  REGION all
END

#============================= source_sink couplers ============================
#============================= strata ==========================================
STRATA
  REGION all
  MATERIAL alluvium
END

END_SUBSURFACE
