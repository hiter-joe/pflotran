#Description: 1D tracer problem.  Run until tracer breakthrough at midpoint.

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE WIPP_FLOW
      OPTIONS
        GAS_COMPONENT_FORMULA_WEIGHT 2.01588d0 #hardwired
        ALLOW_NEGATIVE_GAS_PRESSURE
!        ALPHA_DATASET alpha
        DEFAULT_ALPHA
        BRAGFLO_RESIDUAL_UNITS
        MINIMUM_TIMESTEP_SIZE 8.64d-4
        MIN_LIQ_PRES_FORCE_TS_CUT -1.d8
        MAX_ALLOW_LIQ_PRES_CHANGE_TS 1.d7
        GAS_SAT_THRESH_FORCE_TS_CUT 0.2d0
        MAX_ALLOW_GAS_SAT_CHANGE_TS 1.d0
!        ELEVATION_DATASET elevation
        GAS_RESIDUAL_INFINITY_TOL 1.d-2     ! FTOL_PRES
        LIQUID_RESIDUAL_INFINITY_TOL 1.d-2  ! FTOL_SAT
        MAX_ALLOW_REL_LIQ_PRES_CHANG_NI 1.d-2  ! EPS_PRES
        LIQ_PRES_CHANGE_TS_GOVERNOR 5.d5
        GAS_SAT_THRESH_FORCE_EXTRA_NI 1.d-3
        GAS_SAT_CHANGE_TS_GOVERNOR 0.3d0
        GAS_SAT_GOV_SWITCH_ABS_TO_REL 1.d0
      /
    /
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
      MAX_CFL 1.d0
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
#  CELLS_PER_PROCESS 5
  CELLS
    1
    20
    25
    30
    35
    40
    45
    50
    55
    60
    65
    70
    75
    80
    100
  /
END

#=========================== flow mode ========================================
# Uniform velocity (see below). No flow mode specified.

skip
SPECIFIED_VELOCITY
  UNIFORM? YES
  DATASET 1.d0 0.d0 0.d0 m/yr
END
noskip

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    Tracer
  /
  OUTPUT
    TOTAL
    ALL
  /
END

#=========================== solver options ===================================
LINEAR_SOLVER TRANSPORT
  SOLVER DIRECT
END

#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 1000 1 1
  BOUNDS
    0.d0 0.d0 0.d0
    100.d0 1.d0 1.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
  PERMEABILITY
    PERM_ISO 1.d-12
  /
  CHARACTERISTIC_CURVES cc1
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES cc1
  SATURATION_FUNCTION VAN_GENUCHTEN
    ALPHA  1.d-4
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
    GAS_RESIDUAL_SATURATION 0.1d0
  /
END

#=========================== output options ===================================
OUTPUT
#  TIMES y 5. 10. 15. 20.
  FORMAT TECPLOT POINT
  VELOCITY_AT_CENTER
END

#=========================== times ============================================
TIME
#  FINAL_TIME 25.d0 y
  FINAL_TIME 12.5d0 y            ! tracer at 50m midpoint
  INITIAL_TIMESTEP_SIZE 1.d0 h
  MAXIMUM_TIMESTEP_SIZE 2.5d-1 y
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    -1.d20 -1.d20 -1.d20 
    1.d20 1.d20 1.d20 
  /
END

REGION west
  FACE west
  COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 1.d0
  /
END

REGION east
  FACE east
  COORDINATES
    100.d0 0.d0 0.d0
    100.d0 1.d0 1.d0
  /
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    LIQUID_PRESSURE DIRICHLET
    GAS_SATURATION DIRICHLET
  /
  LIQUID_PRESSURE 101325.d0
  GAS_SATURATION 1.d-6
END

FLOW_CONDITION inlet
  TYPE
    LIQUID_FLUX NEUMANN
    GAS_FLUX NEUMANN
  /
  LIQUID_FLUX 1.d0 m/y
  GAS_FLUX 0.d0 
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE zero_gradient
  CONSTRAINT_LIST
    0.d0 initial
  /
END

TRANSPORT_CONDITION inlet
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 inlet
  /
END

#=========================== constraints ======================================
CONSTRAINT initial
  CONCENTRATIONS
    Tracer 1.d-7  T
  /
END

CONSTRAINT inlet
  CONCENTRATIONS
    Tracer 1.d-3  T
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION outlet
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION east
END

BOUNDARY_CONDITION inlet
  FLOW_CONDITION inlet
  TRANSPORT_CONDITION inlet
  REGION west
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END


TIMESTEPPER FLOW
  TIMESTEP_MAXIMUM_GROWTH_FACTOR 1.25d0
END
END_SUBSURFACE
