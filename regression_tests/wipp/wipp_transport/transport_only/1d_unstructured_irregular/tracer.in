#Description: 1D tracer problem.  Run until tracer breakthrough at midpoint.

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE BRAGFLO
      OPTIONS
        FIX_UPWIND_DIRECTION #hardwired
        GAS_COMPONENT_FORMULA_WEIGHT 2.01588d0 #hardwired
        ALLOW_NEGATIVE_GAS_PRESSURE
        ALPHA_DATASET alpha
!        DEFAULT_ALPHA
        BRAGFLO_RESIDUAL_UNITS
        DELTMIN 8.64d-4
        DPRELIM -1.d8
        DPRES_MAX 1.d7
        DSATLIM 0.2d0
        DSAT_MAX 1.d0
        DTIMEMAX 1.25d0
!        ELEVATION_DATASET elevation
        EPS_SAT 3.d0                     ! GAS_SATURATION_TOLERANCE 1.d-3
        GAS_EQUATION_TOLERANCE 1.d-2     ! FTOL_PRES
        LIQUID_EQUATION_TOLERANCE 1.d-2  ! FTOL_SAT
        LIQUID_PRESSURE_TOLERANCE 1.d-2  ! EPS_PRES
        PRESNORM 5.d5
        SATLIMIT 1.d-3
        SATNORM 0.3d0
        TSWITCH 1.d0
      /
    /
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
      MAX_CFL 1.d0
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
#  CELLS_PER_PROCESS 5
  CELLS
    10
    200
    250
    300
    350
    400
    450
    500
    550
    600
    650
    700
    750
    800
    1000
  /
END

#===================================datasets===================================#
DATASET alpha
  FILENAME ./alpha.h5
  HDF5_DATASET_NAME Alpha
END

#=========================== flow mode ========================================
# Uniform velocity (see below). No flow mode specified.

skip
SPECIFIED_VELOCITY
  UNIFORM? YES
  DATASET 1.d0 0.d0 0.d0 m/yr
END
noskip

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    Tracer
  /
  OUTPUT
    TOTAL
    all
  /
END

#=========================== solver options ===================================
LINEAR_SOLVER TRANSPORT
  SOLVER DIRECT
END

#=========================== discretization ===================================
GRID
  TYPE unstructured_explicit ./grid.uge
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
  PERMEABILITY
    PERM_ISO 1.d-12
  /
  CHARACTERISTIC_CURVES cc1
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES cc1
  SATURATION_FUNCTION VAN_GENUCHTEN
    ALPHA  1.d-4
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
    GAS_RESIDUAL_SATURATION 0.1d0
  /
END

#=========================== output options ===================================
OUTPUT
#  TIMES y 5. 10. 15. 20.
  FORMAT TECPLOT BLOCK
  FORMAT HDF5
  VELOCITY_AT_CENTER
END

#=========================== times ============================================
TIME
#  FINAL_TIME 25.d0 y
  FINAL_TIME 12.5d0 y            ! tracer at 50m midpoint
  INITIAL_TIMESTEP_SIZE 1.d0 h
  MAXIMUM_TIMESTEP_SIZE 2.5d-1 y
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    -1.d20 -1.d20 -1.d20 
    1.d20 1.d20 1.d20 
  /
END

REGION west
  FILE ./west.ex
END

REGION east
  FILE ./east.ex
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    LIQUID_PRESSURE DIRICHLET
    GAS_SATURATION DIRICHLET
  /
  LIQUID_PRESSURE 101325.d0
  GAS_SATURATION 1.d-6
END

FLOW_CONDITION inlet
  TYPE
    LIQUID_FLUX NEUMANN
    GAS_FLUX NEUMANN
  /
  LIQUID_FLUX 1.d0 m/y
  GAS_FLUX 0.d0 
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE zero_gradient
  CONSTRAINT_LIST
    0.d0 initial
  /
END

TRANSPORT_CONDITION inlet
  TYPE dirichlet_zero_gradient
  CONSTRAINT_LIST
    0.d0 inlet
  /
END

#=========================== constraints ======================================
CONSTRAINT initial
  CONCENTRATIONS
    Tracer 1.d-7  T
  /
END

CONSTRAINT inlet
  CONCENTRATIONS
    Tracer 1.d-3  T
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION outlet
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION east
END

BOUNDARY_CONDITION inlet
  FLOW_CONDITION inlet
  TRANSPORT_CONDITION inlet
  REGION west
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

END_SUBSURFACE
